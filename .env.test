# Настройки CI/CD
GITHUB_REGISTRY_IMAGE=ghcr.io/gitmrrabbit/k6-load-testing

# Основные настройки тестирования
BASE_URL=https://jsonplaceholder.typicode.com
TEST_DURATION=10m
VUS=10

# Настройки мониторинга
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
ALERTMANAGER_PORT=9093
K6_DASHBOARD_PORT=6565

# Настройки безопасности
API_KEY=your_api_key_here
BASIC_AUTH_USER=username
BASIC_AUTH_PASS=password
TLS_SKIP_VERIFY=false

# Настройки Chaos Engineering
ENABLE_CHAOS=false
CHAOS_FAILURE_RATE=0.1
RESILIENCE=true

# Настройки отчетов
GENERATE_HTML_REPORT=true
GENERATE_PDF_REPORT=false

# Настройки оповещений
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/MY/SLACK/WEBHOOK
ALERT_EMAIL_TO=alerts@superpuper.com

# Настройки порогов производительности
THRESHOLD_RESPONSE_TIME_95P=1000
THRESHOLD_ERROR_RATE=0.01
THRESHOLD_THROUGHPUT_MIN=50

# Настройки Docker
DOCKER_COMPOSE_FILE=docker-compose.yml
RESULTS_DIR=results
